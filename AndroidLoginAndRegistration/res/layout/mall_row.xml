<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/back"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_list"
        android:background="@drawable/background_item"
        android:gravity="center"
        android:tag="back" >

        <Button
            android:id="@+id/example_row_b_action_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_booking" />

        <Button
            android:id="@+id/example_row_b_action_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_release" />

        <!--  <Button
            android:id="@+id/example_row_b_action_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/uninstall" />-->
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/front"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_list"
        android:background="@color/background_list_front"
        android:orientation="vertical"
        android:padding="@dimen/padding_default"
        android:tag="front" >

        <ImageView
            android:id="@+id/example_row_iv_image"
            android:layout_width="@dimen/size_list_image"
            android:layout_height="@dimen/size_list_image"
            android:layout_marginRight="@dimen/padding_default" />

        <TextView
            android:id="@+id/example_row_tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/example_row_iv_image"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="@dimen/padding_default"
            android:textColor="@color/text_title"
            android:textSize="@dimen/font_size_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/example_row_tv_description"            
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/example_row_tv_title"
            android:textColor="@color/text_description"
            android:textSize="@dimen/font_size_description"
            android:singleLine="true"
            android:layout_toRightOf="@id/example_row_iv_image" />
        
        
    </RelativeLayout>

</FrameLayout>