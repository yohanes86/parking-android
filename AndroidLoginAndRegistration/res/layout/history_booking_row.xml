<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/back"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_list_history"
        android:background="@drawable/background_item"
        android:gravity="center"
        android:tag="back" >

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/button_pay"
            android:layout_width="100dp"
            android:layout_height="50dp"            
            android:background="@color/blue"
            android:text="@string/btn_pay" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/front"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_floating_material_light"
        android:orientation="vertical"
        android:padding="@dimen/padding_default"
        android:tag="front" >

        <TextView
            android:id="@+id/titleMall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Mall Kota Casablanka"
            android:textColor="@color/blue"
            android:textSize="19sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/viewTitle"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/titleMall"
            android:background="#1E88E5"
            android:paddingBottom="@dimen/padding_default" />

        <LinearLayout
            android:id="@+id/layoutLin_TanggalBooking"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewTitle"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtTanggalBooking"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tanggal Booking"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valTanggalBooking"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="01-09-2015 15:13:23"
                android:textColor="@color/grey"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutLin_BookingId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutLin_TanggalBooking"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtBookingId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Booking Id"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valBookingId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="2"
                android:text="BCODEkkkkkssssssssssssssssssssssssssssss"
                android:textColor="@color/grey"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutLin_BookingCode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutLin_BookingId"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtBookingCode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Booking Code"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valBookingCode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BCODEkkkkk"
                android:textColor="@color/grey"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutLin_StatusBooking"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutLin_BookingCode"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtStatusBooking"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status Booking"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valStatusBooking"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Complete"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:id="@+id/viewFooter"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/layoutLin_StatusBooking"
            android:layout_marginTop="5dp"
            android:background="#1E88E5" />
    </RelativeLayout>

</FrameLayout>